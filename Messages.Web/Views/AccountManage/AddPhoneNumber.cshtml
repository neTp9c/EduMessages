@model Messages.Web.ViewModels.AccountManage.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("AddPhoneNumber", "AccountManage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add a phone number</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Number, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Submit" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
